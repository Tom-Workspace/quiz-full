          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/attempts/{{attemptId}}/details",
              "host": ["{{baseUrl}}"],
              "path": ["attempts", "{{attemptId}}", "details"]
            }
          }
        }
      ]
    }
  ]
}

