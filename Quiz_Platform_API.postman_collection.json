            "body": {
              "mode": "raw",
              "raw": "{\n  \"role\": \"teacher\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/users/{{userId}}/role",
              "host": ["{{baseUrl}}"],
              "path": ["users", "{{userId}}", "role"]
            }
          }
        },
        {
          "name": "Get Online Users",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/users/online",
              "host": ["{{baseUrl}}"],
              "path": ["users", "online"]
            }
          }
        },
        {
          "name": "Get User Stats",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/users/stats",
              "host": ["{{baseUrl}}"],
              "path": ["users", "stats"]
            }
          }
        }
      ]
    },
    {
      "name": "Quizzes",
      "item": [
        {
          "name": "Create Quiz",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('quizId', response.data.quiz._id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"اختبار الرياضيات الأول\",\n  \"description\": \"اختبار شامل في الجبر والهندسة\",\n  \"questions\": [\n    {\n      \"questionText\": \"ما هو ناتج 2 + 2؟\",\n      \"answerType\": \"single-choice\",\n      \"options\": [\n        { \"text\": \"3\", \"isCorrect\": false },\n        { \"text\": \"4\", \"isCorrect\": true },\n        { \"text\": \"5\", \"isCorrect\": false },\n        { \"text\": \"6\", \"isCorrect\": false }\n      ],\n      \"points\": 10\n    },\n    {\n      \"questionText\": \"اختر الأرقام الزوجية:\",\n      \"answerType\": \"multiple-choice\",\n      \"options\": [\n        { \"text\": \"2\", \"isCorrect\": true },\n        { \"text\": \"3\", \"isCorrect\": false },\n        { \"text\": \"4\", \"isCorrect\": true },\n        { \"text\": \"5\", \"isCorrect\": false }\n      ],\n      \"points\": 15\n    },\n    {\n      \"questionText\": \"ما هو اسم العاصمة المصرية؟\",\n      \"answerType\": \"text-answer\",\n      \"correctAnswer\": \"القاهرة\",\n      \"points\": 5\n    }\n  ],\n  \"settings\": {\n    \"duration\": 30,\n    \"maxAttempts\": 3,\n    \"startDate\": \"2024-01-15T10:00:00.000Z\",\n    \"endDate\": \"2024-01-22T23:59:59.000Z\",\n    \"showAnswers\": \"after-completion\",\n    \"showScore\": \"immediately\",\n    \"allowResume\": true,\n    \"randomizeQuestions\": false,\n    \"randomizeOptions\": true\n  }\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/quizzes",
              "host": ["{{baseUrl}}"],
              "path": ["quizzes"]
            }
          }
        },
        {
          "name": "Get All Quizzes",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/quizzes?page=1&limit=10&activeOnly=true",
              "host": ["{{baseUrl}}"],
              "path": ["quizzes"],
              "query": [
                {
                  "key": "page",
                  "value": "1"
                },
                {
                  "key": "limit",
                  "value": "10"
                },
                {
                  "key": "activeOnly",
                  "value": "true"
                }
              ]
            }
          }
        },
        {
          "name": "Get Quiz by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/quizzes/{{quizId}}",
              "host": ["{{baseUrl}}"],
              "path": ["quizzes", "{{quizId}}"]
            }
          }
        },
        {
          "name": "Update Quiz",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"اختبار الرياضيات المحدث\",\n  \"description\": \"اختبار محدث في الجبر والهندسة\",\n  \"isActive\": true\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/quizzes/{{quizId}}",
              "host": ["{{baseUrl}}"],
              "path": ["quizzes", "{{quizId}}"]
            }
          }
        },
        {
          "name": "Get Quiz Statistics",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/quizzes/{{quizId}}/stats",
              "host": ["{{baseUrl}}"],
              "path": ["quizzes", "{{quizId}}", "stats"]
            }
          }
        },
        {
          "name": "Delete Quiz",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/quizzes/{{quizId}}",
              "host": ["{{baseUrl}}"],
              "path": ["quizzes", "{{quizId}}"]
            }
          }
        }
      ]
    },
    {
      "name": "Quiz Attempts",
      "item": [
        {
          "name": "Start Quiz",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const response = pm.response.json();",
                  "    pm.collectionVariables.set('attemptId', response.data.attempt._id);",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"quizId\": \"{{quizId}}\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/attempts/start",
              "host": ["{{baseUrl}}"],
              "path": ["attempts", "start"]
            }
